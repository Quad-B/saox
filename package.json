{
  "name": "saox",
  "version": "2.3.4",
  "description": "Sanook Music (Or JOOX) Web App",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "buildwin": "electron-packager . --overwrite --asar=true --platform=win32 --arch=ia32 --icon=img/saoxlogo.ico --prune=true --version-string.CompanyName=\"Quad B Software\" --version-string.FileDescription=SAOX --version-string.ProductName=\"SAOX\"",
    "pack": "electron-builder --dir",
    "dist-all": "electron-builder -mwl",
    "dist-win": "electron-builder --win",
    "dist-lin": "electron-builder --linux",
    "distandpuhall": "electron-builder -wl --publish \"always\" -c.snap.publish=github",
    "distandpuhwin": "electron-builder --win --publish \"always\" -c.snap.publish=github"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/boyphongsakorn/saox.git"
  },
  "keywords": [
    "Music Player App"
  ],
  "author": "BoyPhongsakorn",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/boyphongsakorn/saox/issues"
  },
  "build": {
    "appId": "com.boyphongsakorn.saox",
    "artifactName": "${productName}.${ext}",
    "copyright": "copyright Â© 2019 Quad B Software",
    "win": {
      "target": [
        "nsis",
        "portable",
        "zip"
      ],
      "compression": "maximum",
      "publisherName": "Quad B Software",
      "signingHashAlgorithms": [
        "sha1"
      ]
    },
    "nsis": {
      "artifactName": "${productName}-Setup.${ext}",
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Network",
      "compression": "maximum"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "quad-b",
        "repo": "saox",
        "vPrefixedTagName": false
      }
    ]
  },
  "snap": {
    "confinement": "strict",
    "grade": "stable",
    "summary": "Unofficial JOOX Web App"
  },
  "homepage": "https://github.com/boyphongsakorn/saox#readme",
  "dependencies": {
    "custom-electron-titlebar": "^3.2.6",
    "electron-updater": "^4.3.5",
    "nucleus-nodejs": "^3.0.8"
  },
  "devDependencies": {
    "electron": "^7.3.3",
    "electron-builder": "^22.9.1"
  }
}
